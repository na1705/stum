<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/Content/scss/LoginStyle.min.css" rel="stylesheet" />
    <title>Student Management System - Login</title>
</head>
<body>
    <div class="container">
        <form id="login-form">
            <h2>Login</h2>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
            <button type="submit">Login</button>
        </form>
    </div>

    <script>
    const loginForm = document.getElementById('login-form');
        loginForm.addEventListener('submit', (event) => {
            event.preventDefault(); // Prevent default form submission

            const username = document.getElementById('username').value;
            const password = document.getElementById('password').value;

            // Sample data simulating the database
            const users = [
                { userName: 'admin', password: 'admin', role: 1 },
                { userName: '1707010091', password: '100010', role: 2 },
                { userName: '1707010152', password: '100011', role: 2 },
                { userName: '1707010287', password: '100012', role: 2 },
                { userName: '1707010341', password: '100013', role: 2 },
                { userName: '1707010343', password: '100014', role: 2 },
                { userName: '1807010002', password: '100015', role: 2 },
                { userName: '1807010010', password: '100016', role: 2 }
            ];

            // Authenticate user
            const authenticatedUser = users.find(user => user.userName === username && user.password === password);

            if (authenticatedUser) {
                // Redirect based on role
                if (authenticatedUser.role === 1) {
                    window.location.href = "/Admin/_HomePage";
                } else if (authenticatedUser.role === 2) {
                    window.location.href = "/Student/Homepage";
                }
            } else {
                document.getElementById('message').textContent = 'Invalid username or password.';
            }
        });</script>
</body>
</html>
